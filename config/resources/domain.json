{
  "version": "0.1",
  "prefixes": {
    "foaf": "http://xmlns.com/foaf/0.1/",
    "schema": "https://schema.org/"
  },
  "resources": {
    "people": {
      "name": "person",
      "class": "foaf:Person",
      "attributes": {
        "name": {
          "type": "string",
          "predicate": "foaf:name"
        }
      },
      "relationships": {
        "account": {
          "predicate": "foaf:account",
          "target": "account",
          "cardinality": "one"
        }
      },
      "new-resource-base": "http://mu.semte.ch/application"
    },
    "accounts": {
      "name": "account",
      "class": "foaf:OnlineAccount",
      "attributes": {
        "nickname": {
          "type": "string",
          "predicate": "foaf:accountName"
        }
      },
      "relationships": {
        "owner": {
          "predicate": "foaf:account",
          "target": "person",
          "cardinality": "one",
          "inverse": true
        }
      },
      "new-resource-base": "http://mu.semte.ch/application"
    },
    "posts": {
      "name": "post",
      "class": "schema:SocialMediaPosting",
      "attributes": {
        "headline": {
          "type": "string",
          "predicate": "schema:headline"
        },
        "articleBody": {
          "type": "string",
          "predicate": "schema:articleBody"
        },
        "thumbnailUrl": {
          "type": "string",
          "predicate": "schema:thumbnailUrl"
        }
      },
      "new-resource-base": "https://my-application.com/posts/"
    }
  }
}